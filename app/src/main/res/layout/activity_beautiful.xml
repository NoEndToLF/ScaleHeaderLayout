<?xml version="1.0" encoding="utf-8"?>
<com.wxy.scaleheaderlayoutlibrary.view.ScaleHeaderLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scale_layout"
    tools:context=".BeautifulActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar_layout"
            app:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear_head">
                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_bg"
                        ></ImageView>
</LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_head"
                        android:text="客心愁日暮，徙倚空望归。
山烟涵树色，江水映霞晖。
独鹤凌空逝，双凫出浪飞。
故乡千余里，兹夕寒无衣。"
                        android:background="@color/colorPrimary"
                        android:padding="20dp"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_content"></TextView>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_small_head"
                        android:layout_marginLeft="15dp"
                        android:layout_alignBottom="@+id/tv_content"
                        android:layout_marginBottom="45dp"
                        ></ImageView>
                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0"
                    android:background="@android:color/white"
                    android:tag="toolbar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/Widget.AppCompat.Toolbar" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_collapseMode="pin">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_centerInParent="true"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_small_head"></ImageView>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_collapseMode="pin"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="第一个"
                    android:padding="20dp"
                    android:id="@+id/tv_fragment_one"
                    android:layout_height="wrap_content"
                    ></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第二个"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fragment_two"
                    ></TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f1f1" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.wxy.scaleheaderlayout.view.NoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:background="#ffffff"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.wxy.scaleheaderlayoutlibrary.view.ScaleHeaderLayout>